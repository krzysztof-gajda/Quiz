    <Button
        android:id="@+id/button_finalize_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Zakoncz" />

</RelativeLayout>